AWSTemplateFormatVersion: '2010-09-09'
Description: 'AWS CloudFormation: EC2 with Role for SQS & RDS Access.'
Parameters:
  KeyName:
    Description: Name of an existing EC2 KeyPair to enable SSH access to the instance
    Type: 'AWS::EC2::KeyPair::KeyName'
    ConstraintDescription: Can contain only ASCII characters.
  ImageId:
    Description: Image AMI id
    Type: String
    Default: ami-0ff8a91507f77f867
    AllowedValues:
        - ami-0ff8a91507f77f867
  Region:
    Description: Region to provision resource to 
    Type: String
    Default: ami-0ff8a91507f77f867
    AllowedValues:
      - ami-0ff8a91507f77f867
  InstanceType:
    Description: WebServer EC2 instance type
    Type: String
    Default: t2.micro
    AllowedValues:
      - t1.micro
      - t2.micro
    ConstraintDescription: must be a valid EC2 instance type.
Resources:
  MyEC2Role:
    Type: AWS::IAM::Role
    Properties:
      AssumeRolePolicyDocument:
        Version: '2012-10-17'
        Statement:
          - Effect: Allow
            Principal:
              Service: ec2.amazonaws.com
            Action: 'sts:AssumeRole'
      Policies:
        - PolicyName: AccessSQSandRDS
          PolicyDocument:
            Version: '2012-10-17'
            Statement:
              - Effect: Allow
                Action:
                  - 'sqs:*'
                Resource: '*'
              - Effect: Allow
                Action:
                  - 'rds:*'
                Resource: '*'

  MyInstanceProfile:
    Type: AWS::IAM::InstanceProfile
    Properties:
      Roles:
        - Ref: MyEC2Role

  MyEC2Instance:
    Type: AWS::EC2::Instance
    Properties:
      ImageId: !Ref ImageId
      InstanceType: !Ref InstanceType
      KeyName: MyKeyName
      SecurityGroups:
        - Ref: MySecurityGroup
      IamInstanceProfile:
        Ref: MyInstanceProfile

  MySecurityGroup:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupDescription: Allow access to my instance
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: '22'
          ToPort: '22'
          CidrIp: 0.0.0.0/0
        - IpProtocol: tcp
          FromPort: '80'
          ToPort: '80'
          CidrIp: 0.0.0.0/0

  MyDBInstance:
    Type: AWS::RDS::DBInstance
    Properties:
      DBName: mydbname
      AllocatedStorage: '20'
      DBInstanceClass: db.t2.micro
      Engine: MySQL
      MasterUsername: adminuser
      MasterUserPassword: adminpassword123

  MySQSQueue:
    Type: AWS::SQS::Queue
    Properties:
      QueueName: MyQueue
